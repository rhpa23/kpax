            @Html.LabelFor(model => model.TemplateEmail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.TemplateEmail, htmlAttributes: new { @class = "form-control", style = "width: 580px; height: 300px" })
                @Html.ValidationMessageFor(model => model.TemplateEmail, "", new { @class = "text-danger" })
